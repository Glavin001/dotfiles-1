export PS1="\n\w \[$EGREEN\][\$(vcprompt)] \n>>\[$NO_COLOR\] "

# Eduardo

export ANT_OPTS=-Xmx1024m

#preferences

export HISTCONTROL=erasedups
export HISTSIZE=10000
shopt -s histappend

GREP_OPTIONS="--exclude=\*.svn\*"
export GREP_OPTIONS

export PATH=~/htdocs/sitejet/docroot/propel/generator/bin/:$PATH

# Set the DISPLAY variable ONLY for OS X earlier than 10.5
# Do not set it for 10.5, or it will create problems.

if [[ -z $DISPLAY && $(sw_vers -productVersion) < 10.5  && -z $SSH_CONNECTION ]]; then
	# -- works for Apple X11 with Fast User Switching
    disp_no=($( ps -awx | grep -F X11.app | awk '{print $NF}' | grep -e ":[0-9]"  ))
    if [[ -n $disp_no ]];then
        export DISPLAY=${disp_no}.0
    else
        export DISPLAY=:0.0
    fi
    echo "DISPLAY has been set to $DISPLAY"
fi

# Colors

export CLICOLOR=1
LSCOLORS="Gxfxcxdxbxegedabagacad"
export LSCOLORS

function prompt {
local WHITE="\[\033[0;37m\]"
local GREEN="\[\033[0;32m\]"
local CYAN="\[\033[0;36m\]"
local GRAY="\[\033[0;37m\]"
local BLUE="\[\033[0;34m\]"
local BLACK="\[\033[0;30m\]"
#export PS1="\[\e]1;\]$(basename $(dirname $PWD))/\W\[\a\]
#${GREEN}\u ${CYAN}(\w) âž” ${WHITE}"
}

prompt


